{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": {
        "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]}],
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "react/prop-types": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
